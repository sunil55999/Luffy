modules = ["python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["freetype", "lcms2", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "openssl", "tcl", "tk", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Install Dependencies"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Demo Dashboard"

[[workflows.workflow]]
name = "Install Dependencies"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install python-telegram-bot telethon python-dotenv aiosqlite aiohttp aiohttp-jinja2 Pillow imagehash psutil"

[[workflows.workflow]]
name = "Demo Dashboard"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python demo.py"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80
